<div class="col-md-4">
  <img src="<%= review.image %>" class="card-img" alt="image">
</div>
<div class="col-md-8">
  <div class="card-body">
  <%= link_to review_path(review), class: 'review' do %>
    <h5 class="card-title"><%= review.title %></h5>
    <p class="card-text"><%= review.author %></p>
    <p class="card-text"><%= link_to review.user.name, review.user %> <%= review.created_at.strftime('%Y/%m/%d') %></p>
    <p class="card-text"><%= review.review %></p>
  <% end %>
  </div>
</div>